FROM rust:1.72.1 as build

WORKDIR /ipfs-content-proof

COPY ./Cargo.lock ./Cargo.lock
COPY ./Cargo.toml ./Cargo.toml

RUN cargo build --release

RUN rm src/*.rs
COPY ./src ./src

RUN rm ./target/release/deps/ipfs-content-proof*
RUN cargo build --release

FROM debian:buster-slim
COPY --from=build /ipfs-content-proof/target/release/ipfs-content-proof .

CMD ["./ipfs-content-proof"]
